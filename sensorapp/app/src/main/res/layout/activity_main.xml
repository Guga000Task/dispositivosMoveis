<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceleração X: 0.0"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceleração Y: 0.0"
        android:textSize="18sp"
        android:layout_below="@id/textViewX"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceleração Z: 0.0"
        android:textSize="18sp"
        android:layout_below="@id/textViewY"/>

    <TextView
        android:id="@+id/textViewLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luminosidade: 0.0 lx"
        android:textSize="18sp"
        android:layout_below="@id/textViewZ"
        android:layout_marginTop="16dp"/>
</RelativeLayout>